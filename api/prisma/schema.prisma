datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  image       String?
  price       Int
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  @default("user")
  name     String?
  address  String?
}
